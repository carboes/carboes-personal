{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "lib": ["dom", "es2020"],
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "src/*": ["src/*"]
    },
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "allowUnusedLabels": true
  },
  "include": ["src", "global.d.ts"],
  "typeRoots": [
    "./global.d.ts",
  ],
  "references": [
  ]
}
